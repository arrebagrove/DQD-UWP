<Page
    x:Class="DQD.Net.Pages.ContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DQD.Net.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppPersonalExtraBackground}">
        <WebView Name="webView" 
                 Margin="5,0,0,0"
                 NavigationStarting="webView_NavigationStarting"
                 ContentLoading="webView_ContentLoading"
                 DOMContentLoaded="webView_DOMContentLoaded"
                 NavigationCompleted="webView_NavigationCompleted"
                 NavigationFailed="webView_NavigationFailed"/>
        <Border Background="{ThemeResource DQDBackground}"
                Height="70"
                VerticalAlignment="Top"/>
        <Border Background="{ThemeResource DQDBackground}">
            <TextBlock Name="PageContent" TextWrapping="WrapWholeWords"/>
        </Border>

    </Grid>
</Page>

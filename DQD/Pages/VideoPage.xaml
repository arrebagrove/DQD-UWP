<Page
    x:Class="DQD.Net.Pages.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DQD.Net.Pages"
    xmlns:model="using:DQD.Core.Models"
    xmlns:MPV="using:DQD.Core.Controls"
    xmlns:Shadow="using:DQD.Shadow"
    xmlns:xp="using:XP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="ListResources"/>
        <CollectionViewSource x:Name="HeaderResources"/>
    </Page.Resources>

    <Grid x:Name="grid" 
          SizeChanged="grid_SizeChanged"
          Background="{ThemeResource AppPersonalExtraBackground02}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Mobile360">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Mobile480">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="361"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="400" MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Pivot Name="MyPivot" 
               Width="{Binding Width, ElementName=grid ,Mode=OneWay}"
               ItemsSource="{Binding Source={StaticResource HeaderResources}}"
               SelectionChanged="MyPivot_SelectionChanged">
            <Pivot.HeaderTemplate>
                <DataTemplate x:DataType="model:HeaderModel">
                    <TextBlock Text="{Binding Title}"
                               Margin="0,0,0,5" 
                               TextAlignment="Center" 
                               FontSize="16"
                               Width="55"
                               Foreground="{ThemeResource AppPersonalTextColorPure02}"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.ItemTemplate>
                <DataTemplate x:DataType="model:HeaderModel" >
                    <ListView x:Name="ContentListView" 
                              ItemsSource="{Binding Source={StaticResource ListResources}}"
                              ItemContainerStyle="{ThemeResource SpecialListViewItemExpanded}"
                              SelectionMode="None" 
                              IsItemClickEnabled="True"
                              ItemClick="ListView_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:ContentListModel">
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Title}" 
                                               Grid.Row="0" 
                                               Grid.Column="1"
                                               Margin="3"
                                               TextWrapping="WrapWholeWords"/>
                                    <TextBlock Text="{Binding Date}" 
                                               Grid.Row="1" 
                                               Grid.Column="1"
                                               Margin="3"
                                               FontSize="14"
                                               Foreground="{ThemeResource DQDSummTextColor}"/>
                                    <Image Source="{Binding Image}" 
                                               Grid.Column="0"
                                               Grid.RowSpan="2" 
                                               Margin="2"/>
                                    <Button Content="{Binding ShareNum}" 
                                            Grid.RowSpan="2" 
                                            Grid.ColumnSpan="3"
                                            Background="Transparent"
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource DQDBackground}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </Pivot.ItemTemplate>
        </Pivot>

        <!--#region FloatButton-->
        <StackPanel Name="ButtonStack" 
              Width="150" 
              Height=" 200"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
                    Orientation="Vertical"
              FlowDirection="RightToLeft">
            <Shadow:Shadow 
                Margin="0"
                CornerRadius="0.5"
                Z_Depth="4">
                <xp:XPButton  
                    Name="RefreshBtn"
                    Width="55"
                    Height="55"
                    Background="{ThemeResource DQDBackground2}"
                    BorderThickness="0"
                    CornerRadius="28"
                    Foreground="White"
                    IconForeground="White"
                    IconPosition="OnlyIcon"
                    IconSize="23"
                    PointerOverBackground="{ThemeResource DQDBackground3}"
                    PressedBackground="{ThemeResource DQDBackground3}"
                    Click="RefreshBtn_Click">
                    <xp:XPButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE117;"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
            </Shadow:Shadow>
            <Shadow:Shadow 
                CornerRadius="0.5"
                Z_Depth="4">
                <xp:XPButton  
                    Name="BackToTopBtn"
                    Width="55"
                    Height="55"
                    Background="Orange"
                    BorderThickness="0"
                    CornerRadius="28"
                    Foreground="White"
                    IconForeground="White"
                    IconPosition="OnlyIcon"
                    IconSize="23"
                    PointerOverBackground="DarkOrange"
                    PressedBackground="DarkOrange"
                    Click="BackToTopBtn_Click">
                    <xp:XPButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE11C;"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
            </Shadow:Shadow>
        </StackPanel>

        <StackPanel Name="ButtonStackNoShadow" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical"
                    FlowDirection="RightToLeft"
                    Margin=" 0,0,25,20"
                    Visibility="Collapsed">
            <xp:XPButton  
                    Name="RefreshBtnNoSHdow"
                    Width="55"
                    Height="55"
                    Background="{ThemeResource DQDBackground2}"
                    BorderThickness="0"
                    CornerRadius="28"
                    Foreground="White"
                    IconForeground="White"
                    IconPosition="OnlyIcon"
                    IconSize="23"
                    PointerOverBackground="{ThemeResource DQDBackground3}"
                    PressedBackground="{ThemeResource DQDBackground3}"
                    Click="RefreshBtn_Click">
                <xp:XPButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE117;"/>
                </xp:XPButton.Icon>
            </xp:XPButton>
            <xp:XPButton  
                Name="BackToTopBtnNoShadow"
                Width="55"
                Height="55"
                Background="Orange"
                BorderThickness="0"
                CornerRadius="28"
                Foreground="White"
                IconForeground="White"
                IconPosition="OnlyIcon"
                IconSize="23"
                PointerOverBackground="DarkOrange"
                PressedBackground="DarkOrange"
                Click="BackToTopBtn_Click"
                Margin="0,50,0,0">
                <xp:XPButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE11C;"/>
                </xp:XPButton.Icon>
            </xp:XPButton>
        </StackPanel>
        <!--#endregion-->
        
    </Grid>
</Page>
